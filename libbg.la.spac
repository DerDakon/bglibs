objs = { }
for dir in ('adt','base64','cdb','crc','crypto','dict','fmt','iobuf',
            'misc','msg','net','path','str','sysdeps','unix'):
	for obj in readlist('libbg-%s=l' % dir):
		objs[obj] = 1
for obj in readlist('libvmailmgr=l'):
	objs[obj] = 1
objs = [ obj[:-2]+'.lo' for obj in objs.keys() ]
objs.sort()

dependon(objs)

objs = ' '.join(objs)

: makeshlib Makefile
./makeshlib %(target)s %(objs)s
